button {
  padding: 0;
}
.player {
  border: none;
  width: 250rpx;
  height: 188rpx;
}
.screen {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #000;
}

.full {
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  overflow: hidden;
  margin: 0 -12px;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  width: calc(100% + 8px);
}

.right-container {
  flex-direction: row-reverse;
  justify-content: flex-start;
}

.bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  padding: 0 20px 0 20px;
  margin: 0 -24px;
  width: calc(100% + 8px);
}


.top {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 0 20px 0 20px;
  margin: 0 -24px;
  width: calc(100% + 8px);
  height: calc(100% - 60px);
}


.column {
  flex-direction: column;
  justify-content: space-between;
}

.row {
  max-width: 100%;
  flex-basis: 100%;
  width: calc(100% + 24px);
  margin: -12px;
}

.center {
  text-align: center;
}

.item {
  flex: 0 0 auto;
}

.col-2 {
  width: 16.666%;
}

.col-4 {
  width: 33.333%;
}

.col-6 {
  width: 50%;
}


.col-12 {
  width: 100%;
}

.row-4 {
  height: 33.33%;
}

.row-6 {
  height: 50%;
}


.row-12 {
  height: 100%;
}

